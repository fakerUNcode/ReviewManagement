<!-- 文件名：activity_manage_questions.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back">

    <ListView
        android:id="@+id/list_item_question"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp" />

    <!-- 查找习题按钮 -->

    <Button
        android:id="@+id/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/my_button"
        android:text="查找习题"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_add_question"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/add_icon"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"/>

    <RadioGroup
        android:id="@+id/radio_question_type"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="-24dp"
        android:layout_toStartOf="@+id/button_add_question"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <RadioButton
            android:id="@+id/radio_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部" />

        <RadioButton
            android:id="@+id/radio_single_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选" />

        <RadioButton
            android:id="@+id/radio_multiple_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多选" />

        <RadioButton
            android:id="@+id/radio_judge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="判断" />

        <RadioButton
            android:id="@+id/radio_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="课程题库"
        android:textSize="27sp"
        />


</RelativeLayout>
